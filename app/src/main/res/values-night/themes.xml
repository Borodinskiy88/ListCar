<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ListCar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/SECONDARY_200</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimarySurface">@color/PRIMARY_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/PRIMARY_600</item>
        <item name="colorSecondaryVariant">@color/SECONDARY_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- SplashScreen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @mipmap/ic_launcher_round
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">200</item>
    </style>

    <style name="Theme.ListCar" parent="Base.Theme.ListCar" />
</resources>